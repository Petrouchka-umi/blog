= render "header"

.wrapper
  .main-content
    - @blogs.each do |blog|
      .blog-content
        = link_to blog do
          .blog-box
            .blog-image
              %td= image_tag blog.image.url, class:'img-fluid' 
            .blog-nav
              .blog-time
                %td= blog.created_at.strftime("%Y年%m月%d日")
              .blog-title
                %td= blog.title
              .blog-category
                カテゴリー：
                = blog.category.name 
              .blog-tags
                %td= render 'blogs/tag_list', tag_list: blog.tag_list

  .side-contents
    = render 'side'
  -# 部分テンプレート呼び出し

= render "footer"